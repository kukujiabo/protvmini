/* pages/videos/index.wxss */
.video-list {
  padding: 0 20rpx;
}
.video-list video {
  width: 100%;
}
.video-info {
  padding: 24rpx 0 18rpx 0;
  position: relative;
  border-bottom: 1px solid #f0f0f0;
  margin-bottom: 24rpx;
}
.video-title {
  font-size: 36rpx;
  font-weight: 400;
}
.video-attribute {
  padding: 16rpx 0;
  font-size: 28rpx;
  font-weight: 200;
  color: #999;
}
.video-brief {
  font-size: 30rpx;
  font-weight: 300;
}
.v-i-wrapper {
  position: relative;
  width: 100%;
  height: 420rpx;
}
.share-box {
  position: absolute;
  right: 24rpx;
  top: 24rpx;
}
.share {
  width: 50rpx;
  height: 50rpx;
}
.cover {
  z-index: 9999;
  position: absolute;
  width: 100%;
  height: 420rpx;
  border-radius: 8rpx;
}

.video-brief text {
  word-break: break-all;
  line-height: 40rpx;
  color:#000000;
}

.video-brief .text-break {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;
}

.extends {
  height: 50rpx;
}
.extends text {
  padding: 12rpx 0;
  font-size: 24rpx;
  color: #999;
}
.search-bar {
  padding: 18rpx;
}
.search-bar view {
  padding: 5rpx;
  background: #f6f6f6;
  border-radius:60rpx;
  text-align:center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  height: 54rpx;
  line-height: 54rpx;
  font-weight: 400;
}
.search-bar image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
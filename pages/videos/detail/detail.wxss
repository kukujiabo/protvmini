/* pages/videos/detail/detail.wxss */
.detail-frame {
  padding: 18rpx 0 24rpx 0;
}
video {
  width: 100%;
  height: 420rpx;
}
.info-frame {
  position: relative;
  border-bottom: 1px solid #f0f0f0;
}
.info-frame {
  padding: 16rpx;
}
.title {
  font-size: 32rpx;
  font-weight: 600;
}
.title text {
  width: 75%;
  display: inline-block;
}
.attribute {
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #999;
}
.introduction {
  font-size: 28rpx;
  font-weight: 400;
  word-break: break-all;
  line-height: 48rpx;
  color:#666;
}
.btn-box {
  display: inline-block;
  padding: 0 18rpx;
}
.btn-box image {
  vertical-align: middle;
}
.btn-box button {
  padding: 0;
  border: 0;
  vertical-align: middle;
  line-height: 0;
  border-radius: 0;
  display: inline-block;
}
.share {
  width: 52rpx;
  height: 39rpx
}
.heart {
  width: 44rpx;
  height: 39rpx;
}
.favorite {
  width: 28rpx;
  height: 39rpx;
}
.video-list {
  padding: 24rpx;
}